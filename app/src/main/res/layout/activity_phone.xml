<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="@string/title" />

    <ImageView
        android:id="@+id/img_phone"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/samsung_galaxy_s22"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/txt_phoneName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_phone"
        android:text="@string/phone_name"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_phonePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_phone"
        android:text="@string/phone_price"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/txt_phoneDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_phoneName"
        android:layout_marginVertical="20sp"
        android:text="@string/phone_desc"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ic_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_phoneDesc"
        android:src="@drawable/ic_baseline_smartphone_24"
        android:layout_marginTop="8dp"/>
    
    <TextView
        android:id="@+id/txt_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ic_phone"
        android:layout_alignTop="@id/ic_phone"
        android:layout_alignBottom="@id/ic_phone"
        android:text="@string/memory"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/ic_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_phone"
        android:src="@drawable/ic_baseline_photo_camera_24"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/txt_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ic_camera"
        android:layout_alignTop="@id/ic_camera"
        android:layout_alignBottom="@id/ic_camera"
        android:text="@string/camera"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_bookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/ic_outline_bookmark_add_24"
        android:backgroundTint="@color/blue"
        android:text="@string/bookmark"
        android:textSize="18sp"
        app:cornerRadius="8dp" />

</RelativeLayout>